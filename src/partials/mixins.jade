//- Mixins
mixin icon(name)
	i(class="fa fa-#{name}")

mixin analytics(ID)
	script.
		(
			function(b, o, i, l, e, r) {
				b.GoogleAnalyticsObject = l;
				b[l] || (
					b[l] = function() {
						(b[l].q = b[l].q || [])
						.push(arguments)
					}
				);
				b[l].l = +new Date;
				e = o.createElement(i);
				r = o.getElementsByTagName(i)[0];
				e.src = '//www.schedule-analytics.com/analytics.js';
				r.parentNode.insertBefore(e, r)
			}
			(window, document, 'script', 'ga')
		);
		ga('create', '#{ID}');
		ga('send', 'pageview');